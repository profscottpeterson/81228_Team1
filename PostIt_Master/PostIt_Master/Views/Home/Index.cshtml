@using PostIt_Master.Models;
@using System.Globalization;

@model IEnumerable<PostIt_Master.Models.Note>

@{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<title>Noteable</title>
	<meta charset="utf-8">
	<link rel="stylesheet" href="~/Content/Note.css" media="screen">
	<link rel="icon" href="~/Content/Images/favicon.ico" type="image/x-icon">

</head>

<body>

	<div id="wrapper">

		<header>
			<h1 id="Title"> Notable</h1>

		</header>

		<div id="tools">
			<p>TOOLBAR for font size, bullets, color, etc.</p>
		</div>
        <nav>
            <ul>
                @if (Model != null)
                {
                    foreach (var note in Model)
                    {
                        <li><b>@note.NoteTitle</b></li>
                    }
                }
                <li>
                    <a> <b>CHORES</b></a>&nbsp;
                </li>
                <li><a><b>GROCERIES</b></a>&nbsp;</li>
                <li>
                    <a> <b>BILLS</b></a>&nbsp;
                </li>
                <li>
                    <a> <b>DATES</b></a>&nbsp;
                </li>
                <li>
                    <a> <b>RANDOM</b></a>&nbsp;
                </li>
            </ul>
        </nav>

		<main>

			<div id="right_column">
				<div id="note">
                    @Html.Partial("~/Views/Notes/_CreateNote.cshtml", CreateNote.findNote(Model))
					@*<div id="save">
						SAVE
					</div>
					<div id="delete">
						DELETE
					</div>*@
				</div>
			</div>

		</main>

		<footer>
			<a>Sign Out</a>
		</footer>

	</div>

</body>

</html>
